<VBox prefHeight="450.0" prefWidth="800.0" spacing="10.0" style="-fx-background-color: #7db4e8;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.medisys.controller.UpcomingApmController">
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Lịch khám sắp tới">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Text>
      <TextField fx:id="FilterField" prefHeight="26.0" prefWidth="760.0" promptText="Tìm Kiếm" style="-fx-background-color: #ffffff; -fx-background-radius: 5px;" />
      <HBox prefHeight="38.0" prefWidth="780.0" />
      <TableView fx:id="appointmentTable" prefHeight="395.0" prefWidth="818.0">
         <columns>
            <TableColumn fx:id="dateColumn" prefWidth="78.5" text="Ngày" />
            <TableColumn fx:id="roomColumn" prefWidth="53.0" text="Phòng" />
            <TableColumn fx:id="departmentColumn" prefWidth="132.0" text="Khoa" />
            <TableColumn fx:id="doctorColumn" prefWidth="156.5" text="Bác sĩ" />
            <TableColumn fx:id="notesColumn" prefWidth="318.0" text="Ghi chú" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
