<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="contentBox" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="25.0" style="-fx-background-color: linear-gradient(to bottom, #19c3d2, #1d3557);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.medisys.controller.CoverController">
   <children>
      <Label fx:id="title" text="Kính chào quý vị" textFill="WHITE">
         <font>
            <Font name="System Bold" size="25.0" />
         </font>
      </Label>
      <Label fx:id="description" text="Vui lòng đăng ký tại đây" textFill="WHITE" />
      <Label fx:id="description1" text="nếu quý vị chưa có tài khoản" textFill="WHITE" />
      <Button fx:id="button" onAction="#buttonClick" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: white; -fx-text-fill: #1d3557;" text="ĐĂNG KÝ" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
