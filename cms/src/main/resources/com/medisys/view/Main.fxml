<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" prefWidth="1280" prefHeight="720" fx:controller="com.medisys.controller.MainController">

    <left>
        <VBox alignment="TOP_CENTER" prefHeight="192.0" prefWidth="151.0" spacing="15.0" style="-fx-background-color: #7db4e8;">
            <children>
            <ImageView fitHeight="80.0" fitWidth="155.0" pickOnBounds="true" preserveRatio="true">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <image>
                  <Image url="@icons/logowbrand.png" />
               </image>
            </ImageView>
            <HBox>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <children>
                  <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/booking.png" />
                     </image>
                  </ImageView>
                      <Button fx:id="HomeButton" onAction="#loadAppointmentFirstView" prefHeight="39.0" prefWidth="130.0" style="-fx-text-fill: white; -fx-background-color: #2C3E50; -fx-background-radius: 10px;" text="Đặt lịch" textAlignment="CENTER">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <children>
                  <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/upcoming.png" />
                     </image>
                  </ImageView>
                      <Button fx:id="ViewButton" onAction="#loadUpcomingApmView" prefHeight="39.0" prefWidth="130.0" style="-fx-text-fill: white; -fx-background-color: #2C3E50; -fx-background-radius: 10px;" text="Lịch sắp tới">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <children>
                  <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/user.png" />
                     </image>
                  </ImageView>
                      <Button fx:id="UserButton" onAction="#loadProfileView" prefHeight="39.0" prefWidth="130.0" style="-fx-text-fill: white; -fx-background-color: #2C3E50; -fx-background-radius: 10px;" text="Hồ sơ">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
           <Region VBox.vgrow="ALWAYS" />
            <HBox>

               <children>
                  <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/logout.png" />
                     </image>
                  </ImageView>
                      <Button fx:id="LogoutButton" onAction="#handleLogout" prefHeight="39.0" prefWidth="130.0" style="-fx-text-fill: white; -fx-background-color: #2C3E50; -fx-background-radius: 10px;" text="Đăng xuất">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" />
    </center>
</BorderPane>
