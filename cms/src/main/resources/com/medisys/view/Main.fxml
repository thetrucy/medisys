<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.medisys.controller.MainController">

    <left>
        <VBox alignment="TOP_CENTER" prefHeight="192.0" prefWidth="151.0" spacing="15.0" style="-fx-background-color: #2C3E50;">
            <children>
                <Button fx:id="HomeButton" onAction="#loadAppointmentFirstView" prefWidth="79.0" style="-fx-text-fill: black; -fx-background-color: #7db4e8; -fx-background-radius: 10px;" text="Đặt lịch" textAlignment="CENTER" />
                <Button fx:id="ViewButton" onAction="#loadUpcomingApmView" style="-fx-text-fill: black; -fx-background-color: #7db4e8; -fx-background-radius: 10px;" text="Lịch khám sắp tới" />
                <Button fx:id="UserButton" onAction="#loadProfileView" style="-fx-text-fill: black; -fx-background-color: #7db4e8; -fx-background-radius: 10px;" text="Hồ sơ" />
            </children>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" />
    </center>
</BorderPane>
