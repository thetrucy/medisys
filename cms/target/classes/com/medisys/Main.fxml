<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.medisys.controller.MainController">

    <left>
        <VBox alignment="TOP_CENTER" prefWidth="150.0" spacing="15.0" style="-fx-background-color: #2C3E50;">
            <children>
                <Button onAction="#loadAppointmentFirstView" style="-fx-text-fill: white; -fx-background-color: transparent;" text="Đặt lịch" />
                <Button onAction="#loadUpcomingApmView" style="-fx-text-fill: white; -fx-background-color: transparent;" text="Lịch khám sắp tới" />
                <Button onAction="#loadProfileView" style="-fx-text-fill: white; -fx-background-color: transparent;" text="Hồ sơ" />
            </children>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" />
    </center>
</BorderPane>
